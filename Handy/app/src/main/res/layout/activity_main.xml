<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.real.handyhealthcare.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:gravity="center">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_login"/>

            <Button
                android:id="@+id/bloginregister"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_below="@id/bloginregister"/>
            <TextView
                android:id="@+id/bloginregister3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/bloginregister"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/sympt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_symptom"/>

            <Button
                android:id="@+id/send_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Symptom Analyzer"
                android:orientation="vertical"
                android:layout_below="@id/send_btn"/>
            <TextView
                android:id="@+id/send_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/send_btn"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/doct"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_doctor"/>

            <Button
                android:id="@+id/doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Doctors"
                android:orientation="vertical"
                android:layout_below="@id/doctor"/>
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/doct1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/doctor"/>

        </LinearLayout>

    </GridLayout>




    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/services"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_serme"/>

            <Button
                android:id="@+id/service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Services"
                android:orientation="vertical"
                android:layout_below="@id/service"/>
            <TextView
                android:id="@+id/service4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/service"/>

        </LinearLayout>




        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/map_h"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_hospital"/>

            <Button
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Find Hospital"
                android:orientation="vertical"
                android:layout_below="@id/map"/>
            <TextView
                android:id="@+id/map2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/map"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/reset_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/reset"/>

            <Button
                android:id="@+id/resetbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Reset Password"
                android:orientation="vertical"
                android:layout_below="@id/resetbtn"/>
            <TextView
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/resetbtn"/>

        </LinearLayout>
    </GridLayout>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/chat_d"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_chat"/>

            <Button
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Chat"
                android:orientation="vertical"
                android:layout_below="@id/chat"/>
            <TextView
                android:id="@+id/chat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/chat"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="30dp">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/email_d"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_mail"/>

            <Button
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Send Email"
                android:orientation="vertical"
                android:layout_below="@id/email"/>
            <TextView
                android:id="@+id/email2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/email"/>

        </LinearLayout>





        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="30dp">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/video_d"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_video"/>

            <Button
                android:id="@+id/video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Video Call"
                android:orientation="vertical"
                android:layout_below="@id/video"/>
            <TextView
                android:id="@+id/video2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/video"/>

        </LinearLayout>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Contact Us"
            android:orientation="vertical"
            android:paddingRight="100dp"
            android:paddingLeft="100dp"
            android:layout_below="@id/contact_us"/>
        <TextView
            android:id="@+id/contact2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_below="@id/contact_us"/>

    </LinearLayout>




    </GridLayout>
</LinearLayout>